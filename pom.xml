   <version>3.0.0-CR1</version>
   <name>Seam Examples</name>

   <description>
      Examples for the Seam Framework
   </description>

   <url>http://www.seamframework.org</url>

   <properties>
      <seam.version>3.0.0.b09</seam.version>
   </properties>
   
   <repositories>
      <repository>
          <id>jboss-public-repository-group</id>
          <name>JBoss Community Public Maven Repository</name>
          <url>https://repository.jboss.org/nexus/content/groups/public/</url>
          <layout>default</layout>
          <releases>
            <enabled>true</enabled>
            <updatePolicy>never</updatePolicy>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>never</updatePolicy>
          </snapshots>
      </repository>
   </repositories>
   <pluginRepositories>
        <pluginRepository>
          <id>jboss-public-repository-group</id>
          <name>JBoss Community Public Maven Repository</name>
          <url>https://repository.jboss.org/nexus/content/groups/public/</url>
          <layout>default</layout>
          <releases>
            <enabled>true</enabled>
            <updatePolicy>never</updatePolicy>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>never</updatePolicy>
          </snapshots>
        </pluginRepository>
    </pluginRepositories>
    
